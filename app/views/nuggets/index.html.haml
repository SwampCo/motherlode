.container
  %header
    %h2
      Nuggets Awaiting Moderation
  %input.col-md-12#q{autocomplete: 'off', placeholder: 'Filter by...'}
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th Title
        %th Category
        %th Author
        %th.buttons
    %tbody
      - @nuggets.each do |nugget|
        %tr.nugget
          %th= link_to nugget.title, nugget
          %td= link_to nugget.category.title, nugget.category
          %td= link_to nugget.user.name || nugget.user.email, nugget.user
          -#%td= render partial: 'user_edit_menu', locals: {user: user}