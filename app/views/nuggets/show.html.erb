<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= @nugget.title %></h4>
    </div>

    <div class="panel-body">
      <% @nugget.contents.each do |content| %>
      <h5><%= content.name %></h5>
      <%= content.content %>
      <% end %>

      <% @nugget.images.each do |content| %>
          <h5><%= content.title %></h5>
          <h6><%= content.caption %></h6>
          <img src="/images/<%= content._id %>" />
      <% end %>
    </div>

    <div class="panel-footer">
      <% unless current_user.nil? %>
      <%= link_to 'Edit Nugget', edit_nugget_path(@nugget), class: 'btn btn-primary' %>
      <% end %>
      <%= link_to 'Back', @nugget.category, class: 'btn btn-default' %>
    </div>
  </div>
</div>
