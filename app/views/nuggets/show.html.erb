<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= @nugget.title %></h4>
    </div>

    <div class="panel-body">
      <%= @nugget.title %>
    </div>

    <div class="panel-footer">
      <% unless current_user.nil? %>
      <%= link_to 'Edit Nugget', edit_nugget_path(@nugget), class: 'btn btn-primary' %>
      <% end %>
      <%= link_to 'Back', @nugget.category, class: 'btn btn-default' %>
    </div>
  </div>
</div>
