.container
  .panel.panel-primary
    .panel-heading
      %h4 New Nugget

    .panel-body
      = render 'ajax'

    .panel-footer
      %button.btn.btn-primary{type: "submit"} Save Nugget
      = link_to 'Back', nuggets_path, class: "btn btn-default"

:javascript
  $(function() {
    $('button[type="submit"]').click(function() {
      $('form').submit();
    })
  })