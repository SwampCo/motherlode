<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Subcategories</h4>
  </div>

  <div class="panel-body">
    <ul class="list-group">
      <% @category.children.each do |child_category| %>
        <li class="list-group-item">
          <%= link_to child_category.title, child_category %>
        </li>
      <% end %>
    </ul>
  </div>
</div>