<% if current_user.nil? %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="jumbotron">
        <h1 class="text-center">Welcome to MotherlodeCMS</h1>
        <p class="text-center">
          Please feel free to view the content on this site; however, to add content
          you must have an account. Getting an account is <strong>FREE</strong>, and you can begin
          adding content (up to 5 nuggets) immediately!
        </p>
        <p class="text-center">
          <%= link_to "Signup Here", 'users/sign_up', class: 'btn btn-primary btn-lg' %>
          <%= link_to "Sign In", 'users/sign_in', class: 'btn btn-default btn-lg' %>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="list-group">
        <a href="#" class="list-group-item active">
          <h4 class="list-group-item-heading">Motherlode Projects</h4>
          <p class="list-group-item-text">
            From here you can drill down and find the category you would like to view, add nuggets, or manage.  If you have
            any questions, please click on the "help" button above.
          </p>
        </a>
        <% @categories.where(parent_id: nil).each do |category| %>
        <%= link_to category.title, category, class: "list-group-item" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
