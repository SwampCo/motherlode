<% if current_user.nil? %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="jumbotron">
        <h1 class="text-center">Welcome to MotherlodeCMS</h1>
        <p class="text-center">An account is required to access this system.</p>
        <p class="text-center">
          <%= link_to "Signup Here", 'users/sign_up', class: 'btn btn-primary btn-lg' %>
          <%= link_to "Sign In", 'users/sign_in', class: 'btn btn-default btn-lg' %>
        </p>
      </div>
    </div>
  </div>
</div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="list-group">
          <a href="#" class="list-group-item active">
            <h4 class="list-group-item-heading">Motherlode Projects</h4>
            <p class="list-group-item-text">
              From here you can drill down and find the category you would like to view, add nuggets, or manage.  If you have
              any questions, please click on the "help" button above.
            </p>
          </a>
          <% @categories.where(parent_id: nil).each do |category| %>
          <%= link_to category.title, category, class: "list-group-item" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
